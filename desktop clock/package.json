{
  "name": "desktop-clock",
  "version": "1.0.0",
  "description": "Windows桌面时钟应用",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "set ELECTRON_IS_DEV=1 && electron .",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "pack": "electron-builder --dir",
    "pack-win": "npm run build && electron-builder --win --dir",
    "clean": "rimraf build dist",
    "clean:all": "rimraf build dist node_modules package-lock.json",
    "fresh-install": "npm run clean:all && npm install",
    "analyze": "node analyze-project.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "antd": "^5.26.7",
    "dayjs": "^1.11.13",
    "electron-store": "^10.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-draggable": "^4.5.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.desktop.clock",
    "productName": "Desktop Clock",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
